<%- include("top") %>

<main class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h1 class="text-center mb-4">Register with StacksOfWax</h1>
        <form action="/register" method="POST">
          <div class="form-group">
            <label for="usernameField">Username:</label>
            <input type="text" class="form-control" id="usernameField" name="usernameField" placeholder="Enter your username">
          </div>
          <div class="form-group">
            <label for="passwordField">Password:</label>
            <input type="password" class="form-control" id="passwordField" name="passwordField" placeholder="Enter your password">
          </div>
          <div class="form-group">
            <label for="countryField">Country:</label>
            <input type="text" class="form-control" id="countryField" name="countryField" placeholder="Enter your country">
          </div>
          <div class="form-group">
            <label for="genderField">Gender:</label>
            <input type="text" class="form-control" id="genderField" name="genderField" placeholder="Enter your gender">
          </div>
          <button type="submit" class="btn btn-primary btn-block mt-3">Register</button>
        </form>
      </div>
    </div>
  </main>
  
  </body>
  </html>
